{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend Express.js application using TypeScript",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "build:prod": "tsc -p tsconfig.json",
    "prisma:reset": "prisma migrate reset --schema=prisma-sqlite/schema.prisma",
    "migrate": "prisma migrate dev --schema=prisma-sqlite/schema.prisma",
    "prisma:reset:pg": "prisma migrate reset --schema=prisma-postgres/schema.prisma",
    "migrate:pg": "prisma migrate dev --schema=prisma-postgres/schema.prisma",
    "migrate:deploy": "prisma migrate deploy --schema=prisma-postgres/schema.prisma",
    "start": "node dist/index.js",
    "start:dev": "npm run dev",
    "prisma:studio": "prisma studio --schema=prisma-sqlite/schema.prisma",
    "prisma:studio:prod": "prisma studio --schema=prisma-postgres/schema.prisma",
    "generate:pg": "prisma generate --schema=prisma-postgres/schema.prisma"
  },
  "keywords": [
    "express",
    "typescript",
    "backend"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@elevenlabs/elevenlabs-js": "^2.27.0",
    "@prisma/client": "^6.17.1",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "googleapis": "^162.0.0",
    "marked": "^16.4.0",
    "prisma": "^6.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.18.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
